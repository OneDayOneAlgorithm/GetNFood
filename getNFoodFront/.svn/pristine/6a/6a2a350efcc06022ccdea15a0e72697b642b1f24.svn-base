.storeName-wjh {
  width: 100%;
  height: 4rem;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  color: #5f0080;
}

.menu-management-wjh-heading {
  font-size: 24px;
  margin-bottom: 20px;
  color: #333333;
}

.menu-management-wjh-input,
.menu-management-wjh-button {
  margin-bottom: 20px;
  padding: 12px 16px;
  border: 2px solid #5f0080;
  border-radius: 8px;
  font-size: 16px;
  width: calc(100% - 32px);
  transition: all 0.3s ease;
}

.menu-management-wjh-input:focus,
.menu-management-wjh-button:hover {
  background-color: #5f0080;
  color: #ffffff;
}

.menu-management-wjh-button {
  background-color: transparent;
  color: #5f0080;
  cursor: pointer;
}

.menu-management-wjh-button:hover {
  background-color: #450056;
}

.menu-management-wjh-list {
  list-style-type: none;
  padding: 0;
}

.menu-management-wjh-item {
  margin-bottom: 40px;
}

.menu-management-wjh-image {
  margin-top: 20px;
  display: block;
  width: 120px;
  height: 120px;
  border-radius: 50%;
}

.menu-management-wjh-delete-button {
  background-color: #ff4d4f;
  color: #ffffff;
  border: none;
  border-radius: 8px;
  padding: 8px 12px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.menu-management-wjh-delete-button:hover {
  background-color: #ff7875;
}
