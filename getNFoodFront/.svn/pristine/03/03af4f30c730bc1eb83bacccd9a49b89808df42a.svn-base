@keyframes scrollRight {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(calc(-100% / 2));
    }

    /* 이미지 길이의 절반만큼만 이동 */
}

.sale-container {
    overflow: hidden;
    white-space: nowrap;
    height: 428px;
    width: 85%;
}

.sale-row {
    display: flex;
    animation: scrollRight 20s linear infinite;

}

.sale-card {
    flex: 0 0 auto;
}

.today-sale {
    margin-left: auto;
